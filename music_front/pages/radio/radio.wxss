/* pages/radio/radio.wxss */

.scroll {
  width: 100%;
  height: 100rpx;
  /* line-height: 80rpx; */
  margin: 0rpx auto;
  display: flex;
  /* 超出部分隐藏 */
  overflow: hidden;
  /* 文本不换行 */
  white-space: nowrap; 
  vertical-align: top;
}
.nochecked{
  margin-top:20rpx ;
  margin-right:30rpx;
  margin-left:30rpx;
  border-radius: 20%;
}
.checked
{
  margin-top:20rpx ;
  margin-right:30rpx;
  margin-left:30rpx;
  border-radius: 20%;
  background-color: rgba(248, 156, 220, 0.5);
}
.radiobody{
  display: flex;
  width: auto;
}
.listsongs{
  height: auto;
  overflow: auto;
}
.title-text
{
 
  font-size: 35rpx;
  font-family: "微软雅黑";
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  text-shadow: 5px 2px 6px rgb(187, 180, 180);
}
.titletext
{
  font-size: 30rpx;
  /* 表示几行后超出隐藏 */
  display:-webkit-box;
  -webkit-line-clamp:3;
  /* 超出隐藏 */
  overflow:hidden;
  /*超出显示为省略号*/
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
}
.right {
  width: 90%;
  margin: 0px;
  overflow:auto;
}
.vedios{
  position: relative;
  display: flex;
  height: 180rpx;
  width: 100%;
}
.vedios image{
  height: 170rpx;
  width: 170rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  box-shadow: -5rpx 5rpx 5rpx rgba(68, 68, 66, 0.829);
}
.detailBox{
  display: flex;
  overflow:auto;
  flex-direction: column;
  margin-left: 30rpx;
  margin-top: 0rpx;
  font-size:35rpx;
  width: 600rpx;
}
