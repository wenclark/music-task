/* pages/chartsdetail/chartsdetail.wxss */
.page
{
  width: 100%;
  height: 100%;
}
.back
{
  display: flex;
  text-align: center;
  justify-content: center;
}
.up
{
  position: absolute;
  background-color: rgba(227, 233, 233, 0.384);
  box-shadow: 0 0 2rpx 6rpx rgba(211, 213, 214, 0.822);
  border-radius: 10rpx;
  left:5%;
  width: 90%;
  top: 1%;
  height: 30%;
  text-align: center;
  align-items: center;
}
/* 播放全部背景 */
.listContanier
{
  position: absolute;
  box-shadow: 0 0 2rpx 6rpx rgba(233, 235, 236, 0.822);
  border: 1rpx solid rgba(219, 216, 216, 0.671);
  margin-top: 380rpx;
  width: 90%;
  background-color: rgba(236, 236, 236, 0.5);
}
.image
{
  position: absolute;
  box-shadow: 0rpx 4rpx 6rpx 6rpx rgba(71, 71, 71, 0.822);
  top: 40rpx;
  left: 40rpx;
  width: 270rpx;
  height: 270rpx;
}
.text-back
{
  position: absolute;
  background-color: rgba(198, 216, 216, 0.707);
  box-shadow: 0 0 2rpx 6rpx rgba(211, 213, 214, 0.822);
  border-radius: 10rpx;
  left:55%;
  width: 40%;
  top: 50rpx;
  height: 250rpx;
  text-align: center;
  align-items: center;
}
.des
{
  font-size: 35rpx;
  /* 表示几行后超出隐藏 */
  display:-webkit-box;
  -webkit-line-clamp:5;
  /* 超出隐藏 */
  overflow:hidden;
  /*超出显示为省略号*/
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
}
/* 播放全部 */
.listhead{
  height: 80rpx;
}
/* scroll列表 */
.listsongs{
  height: auto;
}
.songs{
  position: relative;
  display: flex;
  height: 120rpx;
}
.songs image{
  height: 80rpx;
  width: 80rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}
.nametext
{
  width: 300rpx;
   /* 表示几行后超出隐藏 */
   display:-webkit-box;
   -webkit-line-clamp:2;
   /* 超出隐藏 */
   overflow:hidden;
   /*超出显示为省略号*/
   text-overflow:ellipsis;
   -webkit-box-orient:vertical;
}
.detailBox{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 18rpx;
  font-size:28rpx;
}
.nickname{
  font-size: 25rpx;
   /* 表示几行后超出隐藏 */
   display:-webkit-box;
   -webkit-line-clamp:2;
   /* 超出隐藏 */
   overflow:hidden;
   /*超出显示为省略号*/
   text-overflow:ellipsis;
   -webkit-box-orient:vertical;
  color: #bfbfbf;
}
.singer{
  position: absolute;
  margin-left:-90rpx;
  margin-top: -40rpx;
  height: 100rpx;
  width: 100rpx;
  font-size: 25rpx;
}
.songs .iconfont{
  position:absolute;
  right: 0px;
  height: 50rpx;
  width: 50rpx;
  text-align: center;
  line-height: 50rpx;
}