/* pages/history/history.wxss */
page {
  width: 100%;
  height: 100%;
}

.historybox{
  height: 100%;
  width: 100%;
}
.backimg{
  width: 100%;
  height: 100%;
}
.icon-fanhui1{
  position:absolute;
  font-size: 50rpx;
  top: 60rpx;
  left:20rpx;
}
.title{
  position:absolute;
  width: 200rpx;
  font-size: 40rpx;
  top: -4rpx;
  left: 80rpx;
}
.historysongbox{
  position: absolute;
  top: 130rpx;
  height: 90%;
  width: 96%;
  left: 2%;
  margin: auto;
  border-radius: 20rpx;
  background: rgba(8, 8, 8, 0.534);
  overflow:auto;
}
.historysongitem:first-child{
  height: 120rpx;
  width: 100%;
  margin-top: 100rpx;
}
.historysongitem{
  display: flex;
  height: 120rpx;
  width: 100%;
  margin-top: 20rpx;
}
.icon-zhengzaibofang{
  font-size: 40rpx;
  margin-left: 30rpx;
  line-height: 120rpx;
}
.songinfo{
  flex-direction: column;
  margin-left: 30rpx;
  padding-top: 15rpx;
  color: rgb(197, 199, 202);
}
.songname{
  font-size: 35rpx;
}
.singer{
  font-size: 30rpx;
  color: rgb(148, 146, 144);
}
.time{
  position: absolute;
  font-size: 25rpx;
  color: rgb(250, 249, 248);
  line-height: 170rpx;
  right: 20rpx;
}