/* pages/bottlecomment/bottlecomment.wxss */
/* 漂流瓶内容 */
.page
{
  height: 100%;
  width: 100%;
  display: flex;
  text-align: center;
  justify-content: center;
}
.backimage
{
  position:fixed;
  top: 0;
  left: 0;
    width:100%;
    height:100%;
    background-size:cover;
    z-index:-2;
}
.back
{
  position: absolute;
  border: 1rpx solid rgba(170, 156, 156, 0.1);
  top: 20rpx;
  left: 20rpx;
  width: 95%;
  height: 96%;
  border-radius: 5%;
  background-color: rgba(97, 93, 93, 0.43);
  box-shadow: 10rpx 10rpx 15rpx rgb(92, 92, 90);
  z-index: 1;
}
.content
{
  position: absolute;
  border: 1rpx solid rgba(170, 156, 156, 0.1);
  top: 20rpx;
  left: 20rpx;
  width: 95%;
  height: 36%;
  border-radius: 5%;
  background-color: rgba(247, 213, 102, 0.43);
  box-shadow: 10rpx 10rpx 15rpx rgb(92, 92, 90);
  z-index: 0;
}
.contentback
{
  position: absolute;
  border: 1rpx solid rgba(170, 156, 156, 0.1);
  top: 40rpx;
  left: 15rpx;
  width: 95%;
  height: 70%;
  border-radius: 5%;
  background-color: rgba(247, 213, 102, 0.43);
  box-shadow: 10rpx 10rpx 15rpx rgb(92, 92, 90);
  align-items: center;
  text-align: center;
  z-index: 0;
}
.time
{
  position: absolute;
  bottom: 10rpx;
  right: 5rpx;
}
.type
{
  position: absolute;
  color: aliceblue;
  left: 40%;
}
.username
{
  position: absolute;
  top: 70rpx;
  left: 30rpx;
  color: rgb(255, 255, 255);
}
.bottlecontent
{
  position: absolute;
  color: rgb(255, 255, 255);
  top: 40%;
  left: 30%;
}
/* 评论内容 */
.comment
{
  position:absolute;
  height: 58%;
  width: 90%;
  top: 480rpx;
  left: 40rpx;
  z-index: 3;
}
.comments{
  height: 550rpx;
  width: 100%;
  overflow:auto;
  margin-top: 30rpx;
}
.comment-back{
  position: relative;
  display:flex;
  height: 150rpx;
  width: 100%;
  margin-bottom: 10rpx;
  margin-top: 0rpx;
  border-radius: 10%;
  background-color: rgba(247, 213, 102, 0.43);
  border: 1rpx solid rgba(170, 156, 156, 0.1);
}
.name
{
  position: relative;
  height: 150rpx;
  width: 20%;
  word-break: keep-all;
  word-wrap: break-word;
  white-space: pre-line;
  border-radius: 50%;
  background-color: rgba(212, 206, 206, 0.521);
  text-align: center;
}
.commentcontent
{
  position: absolute;
  left: 20%;
  top: 20%;
  width: 80%;
  word-break: keep-all;
  word-wrap: break-word;
  white-space: pre-line;
  margin-top: 20rpx;
}
/* 评论栏 */
.commentbutton{
  display: flex;
  justify-content: space-around;
  height: 120rpx;
  width: 100%;
}
.box{
  width: 70%;
  height: 60%;
  margin-top: 20rpx;
  background-color: rgb(243, 229, 182) ;
  border-radius: 20px;
}
.inputcomment{
  width: 90%;
  height: 60%;
  margin-top: 20rpx;
  background-color:rgb(243, 229, 182) ;
  border-radius: 20px;
  padding: 5rpx;
  margin: auto;
  margin-top: 10rpx;
}
.submit{
  width: 100rpx;
  height: 100rpx;
  line-height:100rpx;
  text-align: center;
  margin-top: 10rpx;
  background-color: rgb(243, 229, 182);
  border-radius: 100%;
}
